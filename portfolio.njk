{% extends "layout.njk" %}

{% block head %}
<title>Portifolio - Renato Pereira</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons";
      rel="stylesheet">
{%endblock%}

{% block content %}

    <div id="wrapperr">
        <h1>Aulas</h1>

    </div>

    <section class="cards">

        {%for item in items %}

       <div class="card" id="{{item.id}}">
        <div class="card__image-container {{'featured-wrapper' if item.featured}}">
            <img src="https://img.youtube.com/vi/{{item.id}}/0.jpg" alt="imagem de {{item.title}}">
            {% if item.featured%}
            <div class="featured">featured</div>
    
        
            {%endif%}
        </div>
        <div class="container_card">
            <p> {{item.title}} </p>
        </div>
        <div class="card_info">
            <p>{{item.duration}}</p>
            <p class="card_price">{{item.price}}</p>
        </div>
       </div>

       {%endfor%}

       

    </section>


    <script src="/scripts.js"></script>

{%endblock%}

